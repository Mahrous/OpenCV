        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <color name="purple_500">#F44336</color>
    <color name="purple_700">#9C27B0</color>
    <color name="white">#FFFFFF</color>
